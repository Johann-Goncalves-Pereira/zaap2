---
import Header from "@components/layout/Header.astro";
import Noise from "@components/layout/Noise.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;

import "../media/styles/_index.scss";
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <meta name='description' content='Zaira GonÃ§alves Pereira' />

    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />

    <meta name='generator' content={Astro.generator} />

    <title>{title}</title>

    {import.meta.env.PROD && (
      <script type='speculationrules' is:inline>
      {
        "prerender": [
        {
          "urls": ["/", "/gallery"],
          "eagerness": "eager"
        }
        ]
      }
      </script>
    )}
  </head>
  <body class='border-gray-900'>
    <Header />
    <main>
      <slot />
    </main>
    <Noise />
  </body>
</html>
